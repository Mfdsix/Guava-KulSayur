<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="3pt"
    android:clickable="true"
    android:focusable="true"
    android:elevation="3pt"
    app:cardCornerRadius="3pt"
    android:foreground="?android:selectableItemBackground"
    android:layout_height="wrap_content"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content"
        android:padding="10pt">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_vegetable_photo"
        android:layout_width="55dp"
        android:layout_gravity="center"
        android:layout_height="55dp"
        android:src="@color/colorPrimary"
        android:layout_marginEnd="10pt"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/tv_vegetable_name"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="2pt"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_vegetable_price"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_store_black_24dp"
            android:drawablePadding="3pt"
            android:textColor="@color/colorGrey"
            android:id="@+id/tv_vegetable_store"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>